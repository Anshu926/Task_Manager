        /* Flash message styles */
.flash-message {
    padding: 10px;
    margin: 10px auto;
    width: 80%;
    text-align: center;
    font-size: 1.2rem;
    border-radius: 5px;
    color: #fff;
    opacity: 1;
    transition: opacity 1s ease-out;  /* Smooth fade-out effect */
}

/* Success message background */
.flash-message.success {
    background-color: #c2f8c3;
    opacity: 0.5;
    border: 1px solid green;
    color: green;
}

/* Error message background */
.flash-message.error {
    background-color: #f44336;
}

/* Flash message disappearing after 5 seconds */
.flash-message {
    animation: fadeOut 3s forwards; /* Fades out after 5 seconds */
}

/* Keyframe animation for fading out */
@keyframes fadeOut {
    0% {
        opacity: 1;
    }
    90% {
        opacity: 1;
    }
    100% {
        opacity: 0;
        display: none;
    }
}

    </style>
<body>
    <form action="/signup" method="POST">
          <!-- Flash Messages -->
    <% if (successMessage) { %>
        <div class="flash-message success">
            <%= successMessage %>
        </div>
    <% } %>
    <% if (errorMessage) { %>
        <div class="flash-message error">
            <%= errorMessage %>
        </div>
    <% } %>
        <h1>Signup</h1>
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>

        <button type="submit">Sign Up</button>
        <br>  <br> 
        <a href="/home" class="btn-back">Back to Home</a>

    </form>
</body>
</html>
